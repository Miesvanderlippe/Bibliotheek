@using Bibliotheek.Models
@{
    ViewBag.Title = "Bibliotheek";
    var bookInfo = BookModel.GetRecentBooks();
}

<h1>Welkom op het bibliotheek gedeelte van de website</h1>
<p>Hier kunt u ons assortiment bekijken en informatie inzien over de boeken, auteurs en uitgevers.</p>
<h1>Acties</h1>
<ul>
    <li><a href="/Library/Issue">Boek meenemen</a></li>
    <li><a href="/Library/Return">Boek terugbrengen</a></li>
    <li><a href="/Library/Overview">Overzicht</a></li>
</ul>
<h1>Recente boeken : </h1>
<table>
@for (var i = 1; i <= bookInfo.Count / 4; i++)
{
<tr>
    <td>
        @Html.ActionLink(bookInfo[i * 4 - 4], "Book", "Library", new { id = bookInfo[i * 4 - 3] }, null)
    </td>
    <td>
        @Html.ActionLink(bookInfo[i * 4 - 1], "Author", "Library", new { id = bookInfo[i * 4 - 2] }, null)
    </td>
</tr>
}
</table>